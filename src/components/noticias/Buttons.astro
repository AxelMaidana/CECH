---
const { id, title, description, imageUrl, onEdit, onDelete } = Astro.props;
---

<div class="flex space-x-2">
  <button 
    class="edit-btn bg-blue-500 text-white px-4 py-2 rounded" 
    data-id={id} 
    onclick={onEdit}
  >
    Editar
  </button>
  <button 
    class="delete-btn bg-red-500 text-white px-4 py-2 rounded" 
    data-id={id} 
    onclick={onDelete}
  >
    Eliminar
  </button>
</div>
