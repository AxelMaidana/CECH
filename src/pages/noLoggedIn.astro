---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Página no autenticada">
  <div class="flex flex-col flex-grow items-center justify-center p-6 bg-white text-gray-900 h-screen">

    <div class="text-center">
        <!-- Icono de archivo -->
        <div class="flex justify-center">
            <!-- Puedes reemplazar esto con una imagen similar a la que compartiste -->
            
            <img src="/media/barrera.png" alt="Icono de barrera" class="h-32 w-auto " />
        </div>

        <!-- Texto de error 404 -->
        <h1 class="text-6xl font-bold text-gray-800 uppercase">Alto ahi</h1>
        <p class="text-lg text-gray-600 mt-2">
          No tienes permisos para acceder a esta página.
        </p>

        <!-- Enlace para volver al sitio -->
        <a href="/" class="mt-6 inline-block text-customBlue hover:underline">
            ⬅ Volver al inicio
        </a>
    </div>
  
</div>
</Layout>
